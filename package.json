{
    "name": "inquirer-select-with-state",
    "description": "Inquirer select prompt with a stateful banner",
    "version": "0.1.4",
    "main": "./dist/select.js",
    "files": [
        "dist"
    ],
    "type": "module",
    "scripts": {
        "build": "tsc",
        "demo": "tsx ./src/demo.ts --run",
        "test": "vitest .",
        "test:once": "vitest run",
        "format": "prettier --write --list-different .",
        "check-format": "prettier --check --list-different .",
        "lint": "eslint . --fix && tsc --noEmit",
        "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
        "ci": "pnpm build && pnpm check-format && pnpm check-exports",
        "prepublishOnly": "pnpm run ci",
        "prepare": "husky"
    },
    "dependencies": {
        "@inquirer/core": "^10.1.13",
        "@inquirer/figures": "^1.0.12",
        "@inquirer/prompts": "^7.5.3",
        "ansi-escapes": "^7.0.0",
        "yoctocolors": "^2.1.1"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.18.1",
        "@eslint/js": "^9.28.0",
        "@inquirer/testing": "^2.1.47",
        "@inquirer/type": "^3.0.7",
        "@types/node": "^24.9.0",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "husky": "^9.1.7",
        "prettier": "3.6.0",
        "ts-loader": "^9.5.2",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.33.1",
        "vitest": "^3.2.2"
    },
    "packageManager": "pnpm@10.10.0",
    "keywords": [
        "inquirer",
        "select",
        "prompt",
        "stateful",
        "banner"
    ],
    "license": "MIT",
    "author": {
        "name": "Craig Patik",
        "email": "craig@patik.com",
        "url": "https://patik.com"
    },
    "homepage": "https://github.com/patik/inquirer-select-with-state",
    "repository": {
        "type": "git",
        "url": "https://github.com/patik/inquirer-select-with-state.git"
    },
    "publishConfig": {
        "access": "public"
    }
}
